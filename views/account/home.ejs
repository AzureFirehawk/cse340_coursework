<!-- Content Heading. Determine if Title exists, otherwise redirect to home -->
<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
<% } else { res.redirect('/'); } %>

        <!-- Message block -->
<%- messages() %>

<!-- Error block -->
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
        <% }); %>
    </ul>
<% } %>

<h2>Welcome <%= accountData.account_firstname %>!</h2>
<h3>Account Management</h3>
<p><a href="/account/edit/<%= accountData.account_id %>">Update Account Information</a></p>
<h3>Favorites</h3>
<p><a href="/favorites/">View Favorites</a></p>
<% if (accountData.account_type == 'Admin' || accountData.account_type == 'Employee') { %>
    <h3>Inventory Management</h3>
    <p><a href="/inv/">Manage Inventory</a></p>
<% } %>