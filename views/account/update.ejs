<!-- Content Heading. Determine if Title exists, otherwise redirect to home -->
<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
<% } else { res.redirect('/'); } %>

<!-- Message block -->
<%- messages() %>

<!-- Error block -->
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
        <% }); %>
    </ul>
<% } %>

<div class="account-form">
    <form action="/account/update" method="post" id="updateForm">
        <label for="firstName">First Name</label>
        <input type="text" id="firstName" name="account_firstname" required pattern="^[a-zA-Z ]+$"
            value="<%= typeof account_firstname != 'undefined' ? account_firstname : accountData.account_firstname %>">
        <label for="lastName">Last Name</label>
        <input type="text" id="lastName" name="account_lastname" required pattern="^[a-zA-Z ]+$"
            value="<%= typeof account_lastname != 'undefined' ? account_lastname : accountData.account_lastname %>">
        <label for="email">Email</label>
        <input type="email" id="email" name="account_email" required
            value="<%= typeof account_email != 'undefined' ? account_email : accountData.account_email %>">
        <button type="submit">Update Account</button>
        <input type="hidden" name="account_id" value="<%= accountData.account_id %>">
    </form>
</div>
<div class="account-form">
    <form action="/account/update-password" method="post" id="passwordForm">
        <label for="newPassword">New Password</label>
        <input type="password" id="newPassword" name="account_password" required minlength="12"
            pattern="(?=.*[0-9])(?=.*[!@#$%^&*])(?=.*[A-Z])(?=.*[a-z]).{12,}"
            title="Password must be at least 12 characters long and include uppercase, lowercase, number, and special character.">
        <p class="form-info">
            Entering a new password will replace your current one.
            Passwords must be at least 12 characters long and contain a number, a special character, and both upper- and
            lowercase letters.
        </p>
        <button type="submit">Change Password</button>
        <input type="hidden" name="account_id" value="<%= accountData.account_id %>">
    </form>
</div>


