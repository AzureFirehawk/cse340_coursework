<!-- Content Heading. Determine if Title exists, otherwise redirect to home -->
<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
<% } else { res.redirect('/'); } %>

<!-- Message block for future use -->
<%- messages() %>


<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
            <li>
               <%= error.msg %>
            </li>
        <% }); %>
    </ul>
<% } %>

<!-- Add Vehicle form -->
<div class="account-form">
    <form action="/inv/add-vehicle" method="post" enctype="multipart/form-data">
        <legend>All Fields Required</legend>
        <label for="classificationId">Classification</label>
        <select id="classificationId" name="classification_id" required>
            <% classificationList %>
        </select>
        <label for="invMake">Make</label>
        <input type="text" id="invMake" name="inv_make" required value="<%= locals.inv_make %>" pattern="^[a-zA-Z]+$">
        <label for="invModel">Model</label>
        <input type="text" id="invModel" name="inv_model" required value="<%= locals.inv_model %>" pattern="^[a-zA-Z ]+$">
        <label for="invColor">Color</label>
        <input type="text" id="invColor" name="inv_color" required value="<%= locals.inv_color %>" pattern="^[a-zA-Z]+$">
        <label for="invPrice">Price</label>
        <input type="number" id="invPrice" name="inv_price" required value="<%= locals.inv_price %>" pattern="^[0-9]+$">
        <label for="invMiles">Miles</label>
        <input type="number" id="invMiles" name="inv_miles" required value="<%= locals.inv_miles %>" pattern="^[0-9]+$">
        <label for="invYear">Year</label>
        <input type="number" id="invYear" name="inv_year" required value="<%= locals.inv_year %>" pattern="^[0-9]+$">
        <label for="invDescription">Description</label>
        <textarea id="invDescription" name="inv_description" required value="<%= locals.inv_description %>"></textarea>
        <label for="invImage">Image</label>
        <input type="file" id="invImage" name="inv_image" accept="image/*">
        
        <button type="submit">Add Vehicle</button>
    </form>
</div>