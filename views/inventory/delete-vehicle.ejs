<!-- Content Heading. Determine if Title exists, otherwise redirect to home -->
<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
<% } else { res.redirect('/'); } %>

<!-- Message block for future use -->
<%- messages() %>


<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
            <li>
               <%= error.msg %>
            </li>
        <% }); %>
    </ul>
<% } %>

<!-- Update Vehicle form -->
<div class="account-form">
    <form id="deleteForm" action="/inv/delete" method="post">
        <h2><strong>Are you sure you want to delete this vehicle?</strong></h2>
        <p><strong>This cannot be undone.</strong></p>
        <label for="invMake">Make</label>
        <input type="text" id="invMake" name="inv_make" readonly required value="<%= locals.inv_make %>" pattern="^[a-zA-Z ]+$" placeholder="Min. 3 characters">
        <label for="invModel">Model</label>
        <input type="text" id="invModel" name="inv_model" readonly required value="<%= locals.inv_model %>" pattern="^[a-zA-Z ]+$" placeholder="Min. 3 characters">
        <label for="invYear">Year</label>
        <input type="number" id="invYear" name="inv_year" readonly required value="<%= locals.inv_year %>" placeholder="4-digit year" max="9999">
        <label for="invPrice">Price</label>
        <input type="text" id="invPrice" name="inv_price" readonly required value="<%= locals.inv_price %>" pattern="^[0-9.]+$" placeholder="Decimal or Integer">
        <button type="submit" disabled>Delete Vehicle</button>
        <input type="hidden" name="inv_id" 
        <% if (locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>
    </form>
</div>