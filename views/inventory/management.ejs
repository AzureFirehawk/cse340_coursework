<!-- Content Heading. Determine if Title exists, otherwise redirect to home -->
<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
<% } else { res.redirect('/'); } %>

<!-- Message block for future use -->
<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
        <% }); %>
    </ul>
<% } %>

<!-- Vehicle Management links -->
<div id="management-links">
    <a href="/inv/add-class" title="Add Classification">Add New Classification</a>
    <a href="/inv/add-vehicle" title="Add Vehicle">Add New Vehicle</a>
</div>

<!-- Inventory Management select -->
<h2>Manage Inventory</h2>
<p>Select a classification to see listed vehicles</p>

<% classificationList %>

<!-- Inventory display grid -->
 <table id="inventoryDisplay"></table>
 <noscript>Please enable JavaScript to view the inventory.</noscript>

 <script src="../../js/inventory.js"></script>